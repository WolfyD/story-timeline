{
  "name": "story-timeline",
  "version": "0.3.2",
  "description": "Timeline builder for your stories",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --watch . --ext js,html,css --exec electron .",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "build": "electron-builder",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:timeline": "jest timeline.test.js",
    "test:app": "jest app.test.js",
    "test:database": "jest database.test.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/user-event": "^14.5.2",
    "babel-jest": "^29.7.0",
    "electron": "^36.1.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.1.10"
  },
  "dependencies": {
    "better-sqlite3": "^11.10.0",
    "remixicon": "^4.6.0",
    "sharp": "^0.34.1",
    "uuid": "^11.1.0"
  },
  "build": {
    "appId": "com.wolfpaw.story-timeline",
    "productName": "Story Timeline",
    "asar": true,
    "npmRebuild": false,
    "nodeGypRebuild": false,
    "files": [
      "**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "useZip": false,
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Story Timeline"
    }
  }
}
